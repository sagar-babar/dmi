#######################################################################
# Enable NGinx status end-point for DataDog/StackDriver monitoring use
#######################################################################
server {
	listen  80;
	server_name  <%=@monitoring_domain%>;

	location  /nginx_status {
		stub_status  on;
		access_log   off;
		allow        127.0.0.1;
		deny         all;
	}

	location  / {
		root  /dev/null;
	}
}
