handlers = 1catalina.org.apache.juli.FileHandler
.handlers = 1catalina.org.apache.juli.FileHandler

############################################################
# Handler specific properties.
# Describes specific configuration info for Handlers.
############################################################

1localhost.org.apache.juli.FileHandler.level = OFF
1localhost.org.apache.juli.FileHandler.directory = ${catalina.base}/logs
1localhost.org.apache.juli.FileHandler.prefix = localhost.

############################################################
# Facility specific properties.
# Provides extra control for each logger.
############################################################

org.apache.catalina.core.ContainerBase.[Catalina].[localhost].level = OFF
org.apache.catalina.core.ContainerBase.[Catalina].[localhost].handlers = 1localhost.org.apache.juli.FileHandler
