# Memory Settings
CATALINA_OPTS="$CATALINA_OPTS -server -XX:MaxPermSize=<%=@max_perm_size%> -Xms<%=@min_heap_size%> -Xmx<%=@max_heap_size%> "

# GC Settings
CATALINA_OPTS="$CATALINA_OPTS -XX:+UseG1GC -XX:MaxGCPauseMillis=50 -XX:GCPauseIntervalMillis=1000 -XX:ParallelGCThreads=10 "
CATALINA_OPTS="$CATALINA_OPTS -XX:+PrintGC -XX:+PrintGCTimeStamps -XX:-HeapDumpOnOutOfMemoryError "

CATALINA_OPTS="$CATALINA_OPTS -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=2222 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Ddeployment.mode=<%=@deployment%>"
